<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secureGreen"
    android:padding="@dimen/standard_margin"
    tools:context="com.reqica.drilon.pinsaver.activity.LoginActivity">

    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="@dimen/lock_icon_size"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/big_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_locked"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/fingerprint_icon"
        android:layout_width="@dimen/fingerprint_icon_size"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_text_view"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_fingerprint"
        android:tint="@android:color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/big_margin"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        tools:text="Test" />

</RelativeLayout>
